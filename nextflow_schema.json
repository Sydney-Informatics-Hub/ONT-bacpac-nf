{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/template-nf//nextflow_schema.json",
  "title": "template-nf pipeline parameters",
  "description": "Template for creating Nextflow workflows",
  "type": "object",
  "$defs": {
    "trycycler_settings": {
      "title": "Trycycler settings",
      "type": "object",
      "description": "Remove this once updated to Autocycler.",
      "default": "",
      "properties": {
        "trycycler_min_contig_length": {
          "type": "integer",
          "default": 5000
        }
      }
    },
    "input_output_options": {
      "title": "Input/output options",
      "type": "object",
      "fa_icon": "fas fa-terminal",
      "description": "Define where the pipeline should find input data and save output data.",
      "required": ["outdir", "sequencing_summary"],
      "properties": {
        "input_directory": {
          "type": "string",
          "fa_icon": "fas fa-folder-open"
        },
        "samplesheet": {
          "type": "string",
          "fa_icon": "fas fa-file"
        },
        "outdir": {
          "type": "string",
          "format": "directory-path",
          "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
          "fa_icon": "fas fa-folder-open",
          "default": "results"
        },
        "sequencing_summary": {
          "type": "string",
          "description": "Path to the sequencing summary file generated by your ONT run."
        },
        "multiqc_config": {
          "type": "string",
          "default": "/scratch/er01/gs5517/ONT-bacpac-nf/assets/multiqc_config.yml",
          "hidden": true
        }
      }
    },
    "nci_gadi_configuration": {
      "title": "NCI Gadi configuration",
      "type": "object",
      "description": "Provide if running this pipeline on NCI Gadi, ignore otherwise.",
      "default": "",
      "properties": {
        "gadi_user": {
          "type": "string",
          "fa_icon": "fas fa-running",
          "description": "Provide your username (e.g. aa1111)"
        },
        "gadi_storage": {
          "type": "string",
          "fa_icon": "fas fa-archive",
          "description": "Storage locations holding data required by pipeline (e.g. scratch/aa11 or scratch/aa11+gdata/aa11)"
        },
        "gadi_account": {
          "type": "string",
          "fa_icon": "fas fa-user-circle",
          "description": "Account to bill service units to."
        }
      },
      "fa_icon": "fas fa-server"
    },
    "singularity_management": {
      "title": "Singularity management",
      "type": "object",
      "default": "",
      "properties": {
        "singularityCacheDir": {
          "type": "string",
          "fa_icon": "fas fa-sitemap",
          "description": "Define location for downloaded containers."
        }
      },
      "fa_icon": "fas fa-box-open"
    },
    "databases": {
      "title": "Databases",
      "type": "object",
      "description": "Define paths to pre-downloaded databases.",
      "default": "",
      "properties": {
        "kraken2_db": {
          "type": "string",
          "fa_icon": "fas fa-virus"
        },
        "bakta_db": {
          "type": "string",
          "fa_icon": "fas fa-bacteria"
        },
        "plassembler_db": {
          "type": "string",
          "fa_icon": "fas fa-circle-notch"
        },
        "amrfinderplus_db": {
          "type": "string",
          "fa_icon": "fas fa-dna"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/$defs/trycycler_settings"
    },
    {
      "$ref": "#/$defs/input_output_options"
    },
    {
      "$ref": "#/$defs/nci_gadi_configuration"
    },
    {
      "$ref": "#/$defs/singularity_management"
    },
    {
      "$ref": "#/$defs/databases"
    }
  ],
  "properties": {
    "pycoqc_header_file": {
      "type": "string",
      "default": "/scratch/er01/gs5517/ONT-bacpac-nf/assets/pycoqc_report_header.txt"
    }
  }
}
